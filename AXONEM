              <option>Size: XXL</option>
            </select>
            <button class="btn primary" id="qAdd">Add to Cart</button>
          </div>
        </div>
      </div>
      <div style="text-align:right;margin-top:8px"><button class="btn" onclick="document.getElementById('quickView').close()">Close</button></div>
    </div>
  </dialog>

  <script>
    // cart state
    const cart = [];
    const cartCountEl = document.getElementById('cartCount');
    const cartListEl = document.getElementById('cartList');
    const cartTotalEl = document.getElementById('cartTotal');
    const cartModal = document.getElementById('cartModal');

    function addToCart(cardEl){
      const id = cardEl.getAttribute('data-id');
      const name = cardEl.getAttribute('data-name');
      const price = Number(cardEl.getAttribute('data-price'));
      // default size M
      cart.push({id,name,price,size:'M'});
      updateCartUI();
      // flash feedback
      cardEl.style.boxShadow = '0 8px 30px rgba(0,212,255,0.06)';
      setTimeout(()=>cardEl.style.boxShadow='none',700);
    }

    function updateCartUI(){
      cartCountEl.textContent = cart.length;
      cartListEl.innerHTML = '';
      // apply combo: if 2 or more items, apply combo pricing for paired items
      let total = 0;
      const items = [...cart];
      if(items.length>=2){
        // number of pairs
        const pairs = Math.floor(items.length/2);
        total += pairs * 1499;
        // remaining
        const rem = items.length - pairs*2;
        for(let i=0;i<rem;i++) total += items[pairs*2 + i].price;
      } else {
        for(const it of items) total += it.price;
      }

      // list items
      items.forEach((it,idx)=>{
        const div = document.createElement('div');
        div.className='cart-item';
        div.innerHTML = `<img src="/mnt/data/${encodeURIComponent(it.name.replace(/\s/g,' '))}.png" onerror="this.style.display='none'"/><div style=\"flex:1\"><div style=\"font-weight:700\">${it.name}</div><div style=\"color:var(--muted);font-size:13px\">Size: ${it.size}</div></div><div style=\"font-weight:800;color:var(--accent)\">₹${it.price}</div>`;
        cartListEl.appendChild(div);
      });

      cartTotalEl.textContent = '₹' + total;
      document.getElementById('cartBtn').title = `Cart (${cart.length})`;
    }

    function toggleCart(){
      cartModal.style.display = cartModal.style.display === 'block' ? 'none' : 'block';
    }

    function checkout(){
      if(cart.length===0){ alert('Cart is empty'); return }
      alert('This is a mock checkout. Total: ' + cartTotalEl.textContent + '\nThank you — AXONEM');
      // clear
      cart.length = 0; updateCartUI(); cartModal.style.display='none';
    }

    // Quick view
    function openModal(id){
      const card = document.querySelector(`.card[data-id="${id}"]`);
      const img = card.querySelector('img').src;
      const title = card.getAttribute('data-name');
      const price = card.getAttribute('data-price');
      document.getElementById('qImg').src = img;
      document.getElementById('qTitle').textContent = title;
      document.getElementById('qDesc').textContent = card.querySelector('.info div').textContent || '';
      document.getElementById('qPrice').textContent = '₹' + price;
      const dlg = document.getElementById('quickView');
      dlg.showModal();
      document.getElementById('qAdd').onclick = function(){ cart.push({id,title,price:Number(price),size:document.getElementById('sizeSelect').value}); updateCartUI(); dlg.close(); };
    }

    // small usability: close quick view on ESC
    document.addEventListener('keydown',e=>{ if(e.key==='Escape'){ const dlg=document.getElementById('quickView'); if(dlg.open) dlg.close(); } });

    // init
    updateCartUI();
  </script>
</body>
