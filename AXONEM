  <dialog id="quickView" style="border:none;border-radius:12px;padding:0;max-width:900px;background:transparent">
    <div style="background:#071017;padding:14px;border-radius:12px;border:1px solid rgba(255,255,255,0.03);color:var(--white)">
      <div style="display:flex;gap:14px;align-items:flex-start">
        <div style="flex:1;min-width:280px"><img id="qImg" src="" alt="" style="width:100%;height:420px;object-fit:contain;border-radius:8px;"/></div>
        <div style="flex:1;padding:6px 12px">
          <h3 id="qTitle" style="margin-top:0"></h3>
          <div id="qDesc" style="color:var(--muted)"></div>
          <div style="margin-top:12px;font-weight:800;color:var(--accent);font-size:20px" id="qPrice"></div>
          <div style="margin-top:18px;display:flex;gap:8px">
            <select id="sizeSelect" style="padding:8px;border-radius:8px;background:transparent;border:1px solid rgba(255,255,255,0.06);color:var(--white)">
              <option>Size: S</option>
              <option>Size: M</option>
              <option>Size: L</option>
